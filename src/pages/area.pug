                span.icon.icon-arrow-card
        .card(href='/')
          .card--image
            img.card--image_slide(src='./assets/img/attractions_events/2.jpg')
            img.card--image_slide(src='./assets/img/attractions_events/2.jpg')
            img.card--image_slide(src='./assets/img/attractions_events/2.jpg')
